      <form id="myForm1">
        <input class="fileInput" id="fileInput1" name="fileType" placeholder="Enter File Name Here" />
      </form>
      
      <h2 id="result1"></h2>
      <h4 id="time1"></h4>
      
      <a href="/data.json">You can check the flat file here</a>
    </div>
    
    <div class="method method-1">
      <h3>Using Web Scraping From <a href="https://fileinfo.com/">FileInfo</a></h3>
      <form id="myForm2">
        <input class="fileInput" id="fileInput2" name="fileType" placeholder="Enter File Name Here" />
      </form>
      
      <h2 id="result2"></h2>
      <h4 id="time2"></h4>
    </div>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" charset="utf-8"></script>
